<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <import resource="dbContext.xml"/>
    <import resource="implsSonyContext.xml"/>
    <import resource="implsLgContext.xml"/>
    <bean id="bumblebee" class="com.example.spring3.RobotBuildSpring.RobotBuild.Robot.Bumblebee" scope="prototype"
          parent="baseModel">
        <constructor-arg value="orange" type="java.lang.String" index="0"/>
        <constructor-arg value="2021" type="int" index="1"/>
        <constructor-arg value="true" type="boolean" index="2"/>
    </bean>
    <bean id="baseModel" abstract="true">

        <constructor-arg ref="legSony" index="2"/>
        <constructor-arg ref="handSony" index="0"/>
        <constructor-arg ref="headSony" index="1"/>

    </bean>

</beans>